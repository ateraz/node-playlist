extends layout
block content
  form.user-form(action='/login', method='post')
    .row
      .form-group.col-lg-3
          label(for='inputName') Name
          input#inputEmail.form-control(type='text', name='user[name]', placeholder='username', value='#{username}')
    .row
      .form-group.col-lg-3
          label(for='inputPassword') Password
          input#inputPassword.form-control(type='password', name='user[password]', placeholder='password')
    .row
      button.btn.btn-primary(type='submit') Login
      span  or 
      a(href='/users/new') sign up