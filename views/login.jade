extends layout
block content
  form.users(method='post', action='/login')
    div
      label User:
        input(name='user[name]', value='')

    div
      label Password:
        input(name='user[password]', value='', type='password')
    div
      input(type='submit', value='Login')
      span or 
        a(href='/users/new') Sign up